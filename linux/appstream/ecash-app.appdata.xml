<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>org.fedimint.ecash-app</id>
  <name>Ecash App</name>
  <summary>Multi-federation Fedimint wallet</summary>
  <metadata_license>MIT</metadata_license>
  <project_license>MIT</project_license>
  <developer id="org.fedimint">
    <name>The Fedimint Developers</name>
  </developer>
  <description>
    <p>
      Ecash App is a Fedimint wallet supporting Lightning, on-chain, and ecash
      payments all in one wallet. Connect to multiple federations and manage
      your Bitcoin with full transparency on fees and wallet details.
    </p>
    <p>
      Users can query registered Lightning Gateways, view the UTXOs of a
      federation, and view the ecash note denominations in the wallet.
    </p>
  </description>
  <launchable type="desktop-id">ecash-app.desktop</launchable>
  <url type="homepage">https://ecash.love</url>
  <url type="bugtracker">https://github.com/fedimint/ecash-app/issues</url>
  <url type="vcs-browser">https://github.com/fedimint/ecash-app</url>
  <provides>
    <binary>ecashapp</binary>
  </provides>
  <categories>
    <category>Finance</category>
    <category>Network</category>
  </categories>
  <keywords>
    <keyword>bitcoin</keyword>
    <keyword>lightning</keyword>
    <keyword>ecash</keyword>
    <keyword>fedimint</keyword>
    <keyword>wallet</keyword>
  </keywords>
